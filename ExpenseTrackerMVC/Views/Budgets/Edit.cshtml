@model ExpenseTrackerMVC.Models.Budget
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Budget</h2>

<div class="form-body">

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.budgetid)
        @Html.HiddenFor(model => model.TotalExpense)
        <div class="form-group">
            <label for="budget">Update your Budget</label>
            @Html.EditorFor(model => model.TotalLimit)
            @Html.ValidationMessageFor(model => model.TotalLimit)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
        </div>
    }

</div>